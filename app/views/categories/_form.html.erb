<div class="row">
  <div class="col-sm-8">
    <%= form_for @category do |form| %>
      <div class="form-group mt-2">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control"%>
        
        <ul class="list-group">
          <% category.errors.full_messages_for(:name).each do |message| %>
            <li class="list-group-item list-group-item-warning"><%= message %></li>
          <% end %>
        </ul>
      </div>

      <div class="actions mb-3 mt-3">
        <%= form.submit "Submit", class: "btn btn-success" %>
        <%= link_to "Cancel", root_path, class: "btn btn-outline-danger"%>
      </div>

    <% end %>
  </div>
</div>