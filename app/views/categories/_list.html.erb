<% categories.each do |category| %>
    <div class="card p-3 mt-3">
        <div class="h4"><%= link_to category.name, category_path(category), class: "text-decoration-none" %></div>
        <% if can? :update, category %>
            <div class="list-group mt-3">
                <div class="list-group-item"><%= link_to "Edit", edit_category_path(category), class: "text-decoration-none" %> </div>
                <div class="list-group-item"><%= link_to "Destroy", category_path(category), class: "text-decoration-none",
                                method: :delete,
                                data: { confirm: "Are you sure?" } %></div>
             </div>
        <% end %>
    </div>
<% end %>