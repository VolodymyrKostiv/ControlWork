<div class="row">
  <div class="col-sm-8">
    <%= form_for @article do |form| %>
      <div class="form-group mt-2">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control"%>
        
        <ul class="list-group">
          <% article.errors.full_messages_for(:title).each do |message| %>
            <li class="list-group-item list-group-item-warning"><%= message %></li>
          <% end %>
        </ul>
      </div>

      <div class="form-group mt-3 mb-3">
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control", rows: "5", width: "auto"%>
        
        <ul class="list-group">
          <% article.errors.full_messages_for(:body).each do |message| %>
            <li class="list-group-item list-group-item-warning"><%= message %></li>
          <% end %>
        </ul>
      </div>

      <div class="form-group mt-3 mb-3">
        <%= form.label :category_id %>
        <%= form.collection_select :category_id, Category.order(:name), :id, :name, { :prompt => "None" }, class: "form-control" %>

        <ul class="list-group">
          <% article.errors.full_messages_for(:category_id).each do |message| %>
            <li class="list-group-item list-group-item-warning"><%= message %></li>
          <% end %>
        </ul>

      </div>

      <div class="form-group">
        <% if article.image.attached? %>
          <%= image_tag article.image, style: "width: 300px; display: block" %>
        <% end %>

        <%= form.label :image %>
        <%= form.file_field :image, class: "form-control" %>

        <ul class="list-group">
          <% article.errors.full_messages_for(:image).each do |message| %>
            <li class="list-group-item list-group-item-warning"><%= message %></li>
          <% end %>
        </ul>
      </div>

      <div class="actions mb-3 mt-3">
        <%= form.submit "Submit", class: "btn btn-success" %>
        <%= link_to "Cancel", root_path, class: "btn btn-outline-danger"%>
      </div>

    <% end %>
  </div>
</div>