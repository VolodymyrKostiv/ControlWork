<% if @articles.size > 0 %>
    <div class="h3 text-center mt-2 mb-3">Search results</div>
    <% @articles.each do |article| %>
        <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
        <div class="card p-2 mb-3">
            <p>
                <small>
                    By <%= link_to article.user.username, profile_path(article.user.username), class: "text-decoration-none" %> 
                    <%= time_ago_in_words article.created_at %> ago
                </small>
            </p>  
            <div class="h4"><%= link_to article.title, article_path(article), class: "text-decoration-none" %></div>
            <p><%= truncate article.body, length: 50 %></p>
        </div>
        </div>
        </div>
    <% end %>
<% else %>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6 mt-3">
            <div class="h4 alert alert-warning text-center" role="alert">
            No results
            </div>
        </div>
    </div>
<% end %>