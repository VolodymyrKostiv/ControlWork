<ul class="list-group">
    <% if @categories.size > 0 %>
      <%= render partial: "categories/list", locals: { categories: @categories } %>
    <% else %>
      <div class="col-sm-8 mt-2">
        <div class="alert alert-warning text-center" role="alert">
          No categories at the moment!
        </div>
      </div>
    <% end %>
    <form class="form-inline" action="/categories">
      <button class="btn btn-outline-primary width: 20px mt-3" type="submit">All categories</button>
    </form>
</ul>