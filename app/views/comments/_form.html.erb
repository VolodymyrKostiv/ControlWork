<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <div class="form-group">
    <%= form.text_area :body, class: "form-control", rows: "5"%>
    <%= form.hidden_field :article_id, value: article_id %>
    <%= form.hidden_field :user_id, value: user_id %>
  </div>
  <div class="actions pb-3 mt-3">
    <%= form.submit "Add comment", class: "btn btn-success" %>
    <%= link_to "Cancel", root_path, class: "btn btn-outline-danger"%>
  </div>
  
<% end %>
